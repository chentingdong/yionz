// schema.prisma
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppState {
  id         String   @id @default(cuid())
  name       String
  prompt     String
  story      String
  template   Template @relation(fields: [templateId], references: [id])
  templateId String
  movie      Movie    @relation(fields: [movieId], references: [id])
  movieId    String
  clips      Clip[]
  loading    Boolean
}

model Demension {
  id     String @id @default(cuid())
  width  Int    @default(786)
  height Int    @default(512)
}

model Clip {
  id          Int       @id @default(0)
  AppState    AppState  @relation(fields: [appStateId], references: [id])
  appStateId  String
  image       Image     @relation(fields: [imageId], references: [id])
  imageId     String    @unique
  animation   Animation @relation(fields: [animationId], references: [id])
  animationId String    @unique
  video       Video     @relation(fields: [videoId], references: [id])
  videoId     String    @unique
  audio       Audio     @relation(fields: [audioId], references: [id])
  audioId     String    @unique
  film        Film      @relation(fields: [filmId], references: [id])
  filmId      String    @unique
  loading     Boolean
}

model Animation {
  id                    String  @id @default(cuid())
  url                   String
  duration              Int
  frameCount            Int
  numInterpolationSteps Int
  fps                   Int
  seed                  Int
  thumbnail             String
  subtitle              String
  loading               Boolean
  Clip                  Clip?
}

model Video {
  id      String @id @default(cuid())
  url     String
  startAt Int
  endAt   Int
  Clip    Clip[]
}

model Image {
  id          String  @id @default(cuid())
  instruction String
  prompt      String
  url         String
  seed        Int
  loading     Boolean
  Clip        Clip[]
}

model Audio {
  id       String  @id @default(cuid())
  text     String
  url      String
  duration Int
  loading  Boolean
  Clip     Clip[]
}

model Film {
  id       String  @id @default(cuid())
  url      String
  duration Int
  loading  Boolean
  Clip     Clip[]
}

model Movie {
  id       String     @id @default(cuid())
  url      String
  loading  Boolean
  AppState AppState[]
}

model Template {
  id           String     @id @default(cuid())
  name         String
  AppState     AppState[]
  instructions Json
  params       Json
}
