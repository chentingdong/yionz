// schema.prisma
generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AppState {
  id         String    @id @unique @default(cuid())
  name       String    @default("")
  prompt     String    @default("")
  story      String?
  template   Template? @relation(fields: [templateId], references: [id])
  templateId String?
  movie      Movie?    @relation(fields: [movieId], references: [id])
  movieId    String?
  clips      Clip[]
  loading    Boolean   @default(false)
}

model Demension {
  id     String @id @default(cuid())
  width  Int    @default(786)
  height Int    @default(512)
}

model Clip {
  id          Int       @id @default(0)
  AppState    AppState  @relation(fields: [appStateId], references: [id])
  appStateId  String
  images      Image[]
  animation   Animation @relation(fields: [animationId], references: [id])
  animationId String    @unique
  video       Video     @relation(fields: [videoId], references: [id])
  videoId     String    @unique
  audio       Audio     @relation(fields: [audioId], references: [id])
  audioId     String    @unique
  film        Film      @relation(fields: [filmId], references: [id])
  filmId      String    @unique
  loading     Boolean   @default(false)
}

model Animation {
  id                    String  @id @default(cuid())
  url                   String
  duration              Int
  frameCount            Int
  numInterpolationSteps Int
  fps                   Int
  seed                  Int
  thumbnail             String
  subtitle              String
  Clip                  Clip?
  loading               Boolean @default(false)
}

model Video {
  id      String @id @default(cuid())
  url     String
  startAt Int
  endAt   Int
  Clip    Clip[]
}

model Image {
  id          String  @id @default(cuid())
  instruction String
  prompt      String
  url         String
  seed        Int
  Clip        Clip[]
  loading     Boolean @default(false)
}

model Audio {
  id       String  @id @default(cuid())
  text     String
  url      String
  duration Int
  loading  Boolean
  Clip     Clip[]
}

model Film {
  id       String  @id @default(cuid())
  url      String
  duration Int
  Clip     Clip[]
  loading  Boolean @default(false)
}

model Movie {
  id       String     @id @default(cuid())
  url      String?
  AppState AppState[]
  loading  Boolean    @default(false)
}

model Template {
  id           String     @id @default(cuid())
  name         String
  instructions Json
  params       Json
  AppState     AppState[]
}
